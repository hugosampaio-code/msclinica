{
  "version": "1.0.0",
  "title": "MS Clínica - Global Settings",
  "description": "Configurações globais de cores e tipografia para o website MS Clínica",
  "type": "global-settings",
  "settings": {
    "custom_colors": [
      {
        "id": "primary",
        "title": "Primary (Ouro/Dourado)",
        "color": "#D4A84B"
      },
      {
        "id": "primary_dark",
        "title": "Primary Dark",
        "color": "#B89239"
      },
      {
        "id": "white",
        "title": "White",
        "color": "#FFFFFF"
      },
      {
        "id": "dark",
        "title": "Dark Gray",
        "color": "#2D2D2D"
      },
      {
        "id": "gray",
        "title": "Gray",
        "color": "#333333"
      },
      {
        "id": "light_bg",
        "title": "Light Background",
        "color": "#F5F5F5"
      },
      {
        "id": "text",
        "title": "Text Color",
        "color": "#555555"
      }
    ],
    "custom_typography": [
      {
        "id": "primary_heading",
        "title": "Primary Heading",
        "font_family": "Segoe UI",
        "font_size": {
          "desktop": "42px",
          "tablet": "36px",
          "mobile": "30px"
        },
        "font_weight": "600",
        "line_height": "1.2",
        "color": "#2D2D2D"
      },
      {
        "id": "secondary_heading",
        "title": "Secondary Heading",
        "font_family": "Segoe UI",
        "font_size": {
          "desktop": "32px",
          "tablet": "28px",
          "mobile": "24px"
        },
        "font_weight": "600",
        "line_height": "1.2",
        "color": "#2D2D2D"
      },
      {
        "id": "body_text",
        "title": "Body Text",
        "font_family": "Segoe UI",
        "font_size": {
          "desktop": "16px",
          "tablet": "15px",
          "mobile": "14px"
        },
        "font_weight": "400",
        "line_height": "1.6",
        "color": "#555555"
      },
      {
        "id": "button_text",
        "title": "Button Text",
        "font_family": "Segoe UI",
        "font_size": "14px",
        "font_weight": "600",
        "text_transform": "uppercase",
        "letter_spacing": "0.5px"
      }
    ]
  },
  "instructions": {
    "pt": [
      "1. Vá para Elementor > Site Settings no WordPress Admin",
      "2. Navegue até Design System > Colors",
      "3. Adicione as cores personalizadas listadas acima",
      "4. Navegue até Design System > Typography",
      "5. Configure os estilos de tipografia conforme especificado",
      "6. Salve as alterações"
    ],
    "en": [
      "1. Go to Elementor > Site Settings in WordPress Admin",
      "2. Navigate to Design System > Colors",
      "3. Add the custom colors listed above",
      "4. Navigate to Design System > Typography",
      "5. Configure typography styles as specified",
      "6. Save changes"
    ]
  },
  "theme_style": {
    "container_width": "1400px",
    "page_padding": "20px",
    "section_padding": {
      "desktop": "80px 0",
      "tablet": "60px 0",
      "mobile": "40px 0"
    },
    "column_gap": "30px",
    "border_radius": "10px",
    "button_border_radius": "50px",
    "transition": "all 0.3s ease"
  }
}
